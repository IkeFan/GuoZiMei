<resources>
    <style name="BaseWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseWeightWrapW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextBaseWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_small" parent="TextBaseWrap">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_small" parent="text_small">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="btn_middle" parent="text_middle">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="text_middle" parent="TextBaseWrap">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_large" parent="TextBaseWrap">
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mine_text_white" parent="TextBaseWrap">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">#f3fbf4</item>
    </style>

    <style name="mine_text_black" parent="TextBaseWrap">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">#333333</item>
    </style>
    
    <style name="home_text_black" parent="BaseWeightWrapW">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
</resources>
