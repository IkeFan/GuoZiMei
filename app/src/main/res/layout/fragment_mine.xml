<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_green"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/v_clothes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_store"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/v_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_settings"/>

                    <ImageView
                        android:id="@+id/v_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_email"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:id="@+id/v_portrait"
                    android:layout_width="@dimen/person_portrait_radius"
                    android:layout_height="@dimen/person_portrait_radius"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/ic_default_portrait"
                    />

                <TextView
                    android:id="@+id/v_name"
                    android:layout_marginTop="6dp"
                    style="@style/mine_text_white"
                    android:layout_toRightOf="@id/v_portrait"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:text="@string/name"
                    android:textSize="@dimen/text_large_size"
                    />

                <TextView
                    android:id="@+id/v_person_msg"
                    style="@style/mine_text_white"
                    android:layout_below="@+id/v_name"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/v_portrait"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:text="@string/person_info"
                    android:textSize="@dimen/text_middle_size"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/v_collections"
                        style="@style/mine_text_white"
                        android:text="6"
                        />

                    <TextView
                        style="@style/mine_text_white"
                        android:layout_marginTop="5dp"
                        android:text="@string/collections"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/v_attentions"
                        style="@style/mine_text_white"
                        android:text="6"
                        />

                    <TextView
                        style="@style/mine_text_white"
                        android:layout_marginTop="5dp"
                        android:text="@string/attentions"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/v_steps"
                        style="@style/mine_text_white"
                        android:text="6"
                        />

                    <TextView
                        style="@style/mine_text_white"
                        android:layout_marginTop="5dp"
                        android:text="@string/steps"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/v_discounts"
                        style="@style/mine_text_white"
                        android:text="6"
                        />

                    <TextView
                        style="@style/mine_text_white"
                        android:layout_marginTop="5dp"
                        android:text="@string/discounts"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_report"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_health_report"
                android:gravity="center"
                android:text="@string/order"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_cure"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_fav_doctor"
                android:gravity="center"
                android:text="@string/my_cure"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_history"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_cure_history"
                android:gravity="center"
                android:text="@string/cure_history"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/line_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_order"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_order"
                android:gravity="center"
                android:text="@string/order"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_car"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_book_car"
                android:gravity="center"
                android:text="@string/book_car"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_address"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_location_blue"
                android:gravity="center"
                android:text="@string/address"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_ticket"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_ticket"
                android:gravity="center"
                android:text="@string/tickets"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_booking"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_mine_booking"
                android:gravity="center"
                android:text="@string/my_booking"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_book_buy"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_book_buy"
                android:gravity="center"
                android:text="@string/book_buy"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_card"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_book_card"
                android:gravity="center"
                android:text="@string/book_card"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />
            <TextView
               style="@style/BaseWeightWrapW"/>
        </LinearLayout>

        <View
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/line_light"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:id="@+id/mine_gamble"
                style="@style/BaseWrap"
                android:src="@mipmap/ic_gamble"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                style="@style/BaseWrap"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mine_gamble">
                <TextView
                    style="@style/text_middle"
                    android:text="我赌我会瘦，清新夏日版"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_marginTop="8dp"
                    style="@style/text_small"
                    android:text="四周时间，减掉4%体重，这次来真的"/>
            </LinearLayout>
            <TextView
                style="@style/text_middle"
                android:textColor="@color/green"
                android:text="@string/to_challenge"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/green_strock_white_bg"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/line_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_vip_center"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_vip_center"
                android:gravity="center"
                android:text="@string/vip_center"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_service_center"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_service_center"
                android:gravity="center"
                android:text="@string/service_center"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_company"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_be_company"
                android:gravity="center"
                android:text="@string/want_company"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />

            <TextView
                android:id="@+id/mine_about_cloud"
                style="@style/BaseWeightWrapW"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_cloud"
                android:gravity="center"
                android:text="@string/about_cloud"
                android:textColor="#333333"
                android:textSize="@dimen/text_middle_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/line_light">

        </LinearLayout>

    </LinearLayout>
</ScrollView>