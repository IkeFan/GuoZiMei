<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/line1"
            android:background="@color/main_green"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_name"
            android:layout_toRightOf="@+id/line1"
            style="@style/text_middle"
            android:layout_marginLeft="5dp"
            android:textColor="#151515"
            android:layout_gravity="left"
            android:text="中医篇"/>

        <LinearLayout
            android:id="@+id/item_more"
            style="@style/BaseWrap"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            >
            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/green"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_marginLeft="5dp"
                style="@style/text_middle"
                android:text="@string/plus_more"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <ImageView
                android:id="@+id/left_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/knowledge_one"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/left_img"
                android:background="@color/main_text_bg"
                android:alpha="0.5"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/left_title"
                    style="@style/text_large"
                    android:text="寒露保养：保暖滋阴"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
           >
            <ImageView
                android:id="@+id/right_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:src="@mipmap/knowledge_one"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/right_img"
                android:background="@color/main_text_bg"
                android:alpha="0.5"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/right_title"
                    style="@style/text_large"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="寒露保养：保暖滋阴"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>