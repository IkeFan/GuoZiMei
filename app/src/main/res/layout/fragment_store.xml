<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_green"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/store"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/v_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:height="30dp"
        android:textSize="@dimen/text_middle_size"
        android:background="@drawable/shape_big_white"
        android:backgroundTint="#f5f5f5"
        android:drawableStart="@mipmap/ic_search"
        android:gravity="center"
        android:hint="@string/key_search"
        android:lines="1" />

    <android.support.design.widget.TabLayout
        android:id="@+id/toolbar_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:fillViewport="false"
        app:layout_scrollFlags="scroll"
        app:tabIndicatorColor="@color/main_green"
        app:tabIndicatorHeight="2.0dp"
        app:tabSelectedTextColor="@color/normal_text_color"
        app:tabTextColor="#151515">


        <android.support.design.widget.TabItem
            style="@style/BaseWeightWrapW"
            android:text="智能徘徊" />

        <android.support.design.widget.TabItem
            style="@style/BaseWeightWrapW"
            android:text="筛选" />

        <android.support.design.widget.TabItem
            style="@style/BaseWeightWrapW"
            android:text="教学方式" />
    </android.support.design.widget.TabLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/store_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>